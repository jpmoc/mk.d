	$(foreach NV, $(GLB_PROJECTPIPELINESCHEDULEVARIABLES_NAMEVALUES),\
	$(GITLAB) project-pipeline-schedule-variable delete --key $(firstword $(subst =,$(SPACE),$(NV))) $(__GLB_PIPELINE_SCHEDULE_ID__PROJECTPIPELINESCHEDULEVARIABLE) $(__GLB_PROJECT_ID__PROJECTPIPELINESCHEDULEVARIABLE); \
	)

_glb_show_projectpipelineschedulevariable: 
	@$(INFO) '$(GLB_UI_LABEL)Showing variable "$(GLB_PROJECTPIPELINESCHEDULEVARIABLE_NAME)" of project-pipeline-schedule "$(GLB_PROJECTPIPELINESCHEDULEVARIABLE_PROJECTPIPELINESCHEDULE_NAME)" ...'; $(NORMAL)
