_glb_create_projectpipelineschedulevariable:
	@$(INFO) '$(GLB_UI_LABEL)Creating a project-pipeline-schedule-variable "$(GLB_PROJECTPIPELINESCHEDULEVARIABLE_NAME)" ...'; $(NORMAL)
	$(GITLAB) project-pipeline-schedule-variable create $(__GLB_KEY) $(__GLB_PIPELINE_SCHEDULE_ID__PROJECTPIPELINESCHEDULEVARIABLE) $(__GLB_PROJECT_ID__PROJECTPIPELINESCHEDULEVARIABLE) $(__GLB_VALUE)

_glb_create_projectpipelineschedulevariables:
	@$(INFO) '$(GLB_UI_LABEL)Creating a project-pipeline-schedule-variables for "$(GLB_PROJECTPIPELINESCHEDULEVARIABLES_PROJECTPIPELINESCHEDULE_NAME)" ...'; $(NORMAL)
	$(foreach NV, $(GLB_PROJECTPIPELINESCHEDULEVARIABLES_NAMEVALUES),\
	$(GITLAB) project-pipeline-schedule-variable create --key $(firstword $(subst =,$(SPACE),$(NV))) $(__GLB_PIPELINE_SCHEDULE_ID__PROJECTPIPELINESCHEDULEVARIABLE) $(__GLB_PROJECT_ID__PROJECTPIPELINESCHEDULEVARIABLE) --value $(lastword $(subst =,$(SPACE),$(NV))); \
	)

_glb_delete_projectpipelineschedulevariable:
	@$(INFO) '$(GLB_UI_LABEL)Deleting a project-pipeline-schedule "$(GLB_PROJECTPIPELINESCHEDULEVARIABLE_NAME)" ...'; $(NORMAL)
	$(GITLAB) project-pipeline-schedule-variable delete $(__GLB_KEY) $(__GLB_PIPELINE_SCHEDULE_ID__PROJECTPIPELINESCHEDULEVARIABLE) $(__GLB_PROJECT_ID__PROJECTPIPELINESCHEDULEVARIABLE)

_glb_delete_projectpipelineschedulevariables:
